// Converting it into tabular form which is from bottom to up
int f(int n , vector<int> &heights , vector<int> &dp)
{
    dp[0] = 0;

    for (int i=1;i<n;i++)
    {
        int fs = dp[i-1] + abs(heights[i] - heights[i-1]);

        int ss = INT_MAX;;
        if (i>1)
        ss = dp[i-2] + abs(heights[i] - heights[i-2]);

        dp[i] = min(fs,ss);
    }
    return dp[n-1];
}

int frogJump(int n, vector<int> &heights)
{
    // Write your code here.
    vector<int> dp(n,0);
    int ans = f(n,heights,dp);
    return ans;

}


